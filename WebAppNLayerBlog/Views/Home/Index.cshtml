@model IEnumerable<WebAppNLayerBlog.BusinessLogicLayer.ViewModels.Guest.GuestIndexViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    @foreach (var posts in Model)
    {
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <a href="#" class="badge badge-primary">@posts.Category.Name</a>
                    <h5 class="card-title">@posts.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@posts.Subtitle</h6>
                    <p class="card-text">@posts.Description</p>
                    <a asp-action="Detail" asp-route-id="@posts.Id" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        </div>
    }
</div>
